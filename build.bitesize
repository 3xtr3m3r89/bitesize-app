# see https://mycloud.atlassian.net/wiki/display/BITE/Jenkins
project: thilina-dev
components:
  - name: doc-app
    os: linux
    dependencies:
      - type: debian-package
        package: nodejs
    repository:
      git: git@github.com:geethaka/nodejsdemo.git
      branch: master
    build:
      - shell: mkdir -p /app
      - shell: cp -rf * /app
      - shell: fpm -s dir -n nodedemoapp --iteration $(date "+%Y%m%d%H%M%S") -t deb /app
    artifacts:
      - location: "*.deb"
